{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Theme",
  "type": "object",
  "properties": {
    "author": {
      "anyOf": [
        {
          "$ref": "#/$defs/ThemeAuthor"
        },
        {
          "type": "null"
        }
      ]
    },
    "spicetify": {
      "anyOf": [
        {
          "$ref": "#/$defs/ThemeSpicetify"
        },
        {
          "type": "null"
        }
      ]
    },
    "version": {
      "type": [
        "string",
        "null"
      ]
    },
    "wallpaper_engine": {
      "anyOf": [
        {
          "$ref": "#/$defs/ThemeWallpaperEngine"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "$defs": {
    "ThemeAuthor": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "url": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "name"
      ]
    },
    "ThemeSpicetify": {
      "type": "object",
      "properties": {
        "color_scheme": {
          "type": [
            "string",
            "null"
          ]
        },
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "url"
      ]
    },
    "ThemeWEPlaylist": {
      "type": "object",
      "properties": {
        "monitor": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        }
      },
      "required": [
        "monitor"
      ]
    },
    "ThemeWEWallpaper": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "kind": {
          "$ref": "#/$defs/WallpaperKind"
        },
        "monitor": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        }
      },
      "required": [
        "id",
        "kind",
        "monitor"
      ]
    },
    "ThemeWallpaperEngine": {
      "type": "object",
      "properties": {
        "playlist": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/$defs/ThemeWEPlaylist"
          }
        },
        "wallpapers": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/$defs/ThemeWEWallpaper"
          }
        }
      }
    },
    "WallpaperKind": {
      "type": "string",
      "enum": [
        "workshop",
        "myprojects",
        "defaultprojects"
      ]
    }
  }
}